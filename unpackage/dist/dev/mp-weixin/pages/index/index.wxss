.carousel {
	width: 100%;
	height: 440rpx;
}
/* 热门推荐start */
.super-hot {
	margin-top: 12rpx;
	padding: 20rpx;
}
.hot-title-wapper {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
}
.hot-ico {
	width: 30rpx;
	height: 30rpx;
	margin-top: 10rpx;
}
.hot-title {
	font-size: 18px;
	margin-left: 20rpx;
	font-weight: bold;
}
.hot {
	width: 100%;
	white-space: nowrap;
	padding-bottom: 6rpx;
}
.single-poster {
	display: inline-block;
	margin-left: 20rpx;
}
.poster-wapper {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
}
.poster {
	width: 200rpx;
	height: 270rpx;
}
.movie-name {
	width: 200rpx;
	margin-top: 10rpx;
	font-size: 16px;
	font-weight: bold;
	/* name文字超出省略号显示 */
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}
/* 热门推荐end */
/* 热门预告start */
.hot-movies {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
	-webkit-flex-wrap: wrap;
	        flex-wrap: wrap;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	padding: 0rpx 20rpx 20rpx 20rpx;
}
.hot-movie-single {
	width: 350rpx;
	height: 220rpx;
	margin-top: 10rpx;
}
/* 热门预告end */
/* 猜你喜欢start */
.guess-u-like {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
	padding: 10px 10px;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
}
.like-movie {
	width: 180rpx;
	height: 240rpx;
	border-radius: 3%;
	padding-right: 10px;
}
.movie-desc {
	width: 340rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	font-size: 16px;
	line-height: 22px;
}
.movie-title {
	font-weight: 700;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}
/* 点赞 */
.movie-oper {
	width: 140rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	border-left: dashed 2px #aeaeae;
}
.praise-ico {
	width: 40rpx;
	height: 40rpx;
	-webkit-align-self: center;
	        align-self: center;
}
.praise-me {
	font-size: 14px;
	color: #feab2a;
	-webkit-align-self: center;
	        align-self: center;
}
.animation-opacity {
	font-weight: bold;
	opacity: 0;
}
