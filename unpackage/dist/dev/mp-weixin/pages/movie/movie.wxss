/* 视频播放start */
.movie {
	width: 100%;
	height: 440rpx;
}
/* 视频播放end */
/* 影片基本信息start */
.movie-info {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-flex: row;
	-webkit-flex: row;
	        flex: row;
	padding: 40rpx 20rpx;
}
.cover {
	width: 280rpx;
	height: 380rpx;
	padding-top: 10rpx;
}
.movie-desc {
	margin-left: 20rpx;
	/* white-space: nowrap; */
	overflow: hidden;
	/* text-overflow: ellipsis; */
}
.title {
	font-size: 24px;
	font-weight: bold;
	margin-bottom: 10rpx;
	/* white-space: nowrap; */
	overflow: hidden;
	text-overflow: ellipsis;
}
.basic-info {
	font-size: 16px;
	color: #666;
	line-height: 50rpx;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}
/* 影片基本信息end */
/* 评分start */
.score-block {
	height: 120rpx;
	margin-top: 14rpx;
	background-color: #FFF;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-flex: row;
	-webkit-flex: row;
	        flex: row;
	-webkit-box-pack: start;
	-webkit-justify-content: flex-start;
	        justify-content: flex-start;
	box-shadow: 3px 2px 10px #dedede;
}
.big-score {
	padding: 5rpx 0rpx 5rpx 14rpx;
}
.movie-score {
	color: #feab2a;
	font-weight: bold;
	font-size: 24px;
}
.score-stars {
	padding: 10rpx 10rpx 5rpx 0rpx;
	line-height: 80rpx;
}
/* 评分end */
/* 剧情介绍start */
.plots-block {
	border-top: 1px solid #ddd;
	padding: 20rpx;
}
.plots-title {
	color: #333;
	font-size: 18px;
	font-weight: 800;
}
.plots-desc {
	color: #666666;
	font-size: 16px;
	padding-top: 10rpx;
	line-height: 48rpx;
}
/* 剧情介绍end */
/* 剧照start */
.scroll-block {
	padding: 20rpx;
}
.scroll-list {
	padding-top: 20rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-flex: row;
	-webkit-flex: row;
	        flex: row;
	-webkit-box-pack: start;
	-webkit-justify-content: flex-start;
	        justify-content: flex-start;
	white-space: nowrap;
}
.plot-image {
	width: 220rpx;
	height: 280rpx;
	padding-right: 10rpx;
}
/* 剧照end */
/* 演职人员start */
.single-actor {
	width: 170rpx;
	height: 240rpx;
	margin-right: 10rpx;
}
.actor-wapper {
	display: inline-block;
}
.actor-name {
	width: 170rpx;
	text-align: center;
	font-size: 16px;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}
.actor-role {
	width: 170rpx;
	text-align: center;
	font-size: 16px;
	color: #999;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}
/* 演职人员end */

